<%= render 'layouts/leftnav' %>

   <div class="col-md-9">
      <div class="content">
      <h1>Dashboard</h1>
      <hr>

<div class="col-md-6">
      <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Top Performing Students</span></div>

      <table class="table table-hover">
      <% @students.sort_by(&:average).reverse.first(5).each do |s| %>
      <tr><td><%= link_to s.fullname, user_classgroup_student_path(user_id: s.user_id, id: s.id, classgroup_id: s.classgroup_id) %> <span class="pull-right"><b>Average:</b> <%= s.average %></td></tr>
      <% end %>
      </table>
      </div>
   </div>

      <div class="col-md-6">
         <div class="panel panel-default">
           <!-- Default panel contents -->
           <div class="panel-heading">Lowest Performing Students</span></div>

         <table class="table table-hover">
         <% @students.sort_by(&:average).first(5).each do |s| %>
         <tr><td><%= link_to s.fullname, user_classgroup_student_path(user_id: s.user_id, id: s.id, classgroup_id: s.classgroup_id) %> <span class="pull-right"><b>Average:</b> <%= s.average %></td></tr>
         <% end %>
         </table>
         </div>
      </div>

   </div>
   </div>
</div>
